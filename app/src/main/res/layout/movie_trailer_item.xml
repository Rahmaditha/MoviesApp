<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="100dp"
    android:layout_marginTop="1dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    android:elevation="5dp"
    android:id="@+id/cl_genre"
    android:foreground="?selectableItemBackground"
    android:background="@drawable/bg_rounded_white">

    <ImageView
        android:id="@+id/picture_movies"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@drawable/bg_rounded_white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/icon_youtube"
        app:layout_constraintTop_toTopOf="@id/picture_movies"
        app:layout_constraintBottom_toBottomOf="@id/picture_movies"
        app:layout_constraintEnd_toEndOf="@id/picture_movies"
        app:layout_constraintStart_toStartOf="@id/picture_movies"/>

</androidx.constraintlayout.widget.ConstraintLayout>